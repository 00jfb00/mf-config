{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "rules": {
    "quotes": 0,
    "comma-dangle": 0,
    "no-shadow": 0,
    "arrow-parens": 0,
    "no-confusing-arrow": 0,
    "no-unneeded-ternary": 0,
    "import/no-extraneous-dependencies": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "allowImportExportEverywhere": true
  }
}
